
<h1>Please log in</h1>
<%= form_tag('login', method: :post) do %>
	<p>
		<%= label_tag :email %>
		<%= email_field_tag :email %>
	</p>

	<p>
		<%= label_tag :password %>
		<%= password_field_tag :password %>
	</p>

	<p>
		<%= submit_tag :login %>
	</p>

<% end %>
